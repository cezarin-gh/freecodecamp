---
import "@fontsource/lato";
import Favicon from "/favicon.ico";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link type="icon" type="image/x-icon" href={Favicon}>
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style lang="scss">
    :root {
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            color: white;
            font-family: "Lato", sans-serif;
        }
    }

    body {
        background: #0a0a23;
    }
</style>